{
  "name": "drink_water_app_monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start:frontend": "cd apps/frontend && yarn start",
    "start:mobile": "cd apps/mobile && yarn start",
    "start:backend": "uvicorn apps.backend.app.main:app --reload",
    "build": "turbo run build"
  },
  "devDependencies": {
    "turbo": "latest" 
  }
}